<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.ContactFragment"
    android:background="@color/white">


    <ImageView
        android:id="@+id/contactScreen_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/contactScreen_contactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Contact Us!"
        android:background="@color/colorAccent"
        android:layout_below="@+id/contactScreen_logo"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/contactScreen_shareBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share the App!"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />


</RelativeLayout>
