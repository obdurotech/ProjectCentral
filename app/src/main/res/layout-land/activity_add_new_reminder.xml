<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_new_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.AddNewReminder">


    <EditText
        android:id="@+id/reminderDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Reminder Name"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />


    <com.simplicityapks.reminderdatepicker.lib.ReminderDatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminderDescription"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/reminder_setAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Reminder!"
        android:layout_marginBottom="11dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/reminder_done_btn"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/reminder_setLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Location!"
        android:background="@color/colorAccent"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/reminder_setAlarm"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/reminder_done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:layout_marginBottom="28dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add a Reminder!"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
