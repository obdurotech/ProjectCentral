<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reminder_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.ReminderDetail">

    <TextView
        android:text="When?"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:background="@drawable/selector"
        android:textColor="@color/black"
        android:layout_marginTop="43dp"
        android:id="@+id/reminderDetail_When_textView"
        android:paddingStart="10dp"
        android:layout_below="@+id/reminderDetail_TitleText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Where?"
        android:background="@drawable/selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/reminderDetail_Where_textView"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:layout_below="@+id/reminderDetail_TimeDetail"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/reminderDetail_Place_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/reminderDetail_Where_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reminderDetail_Date_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="---- Date ----"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/reminderDetail_When_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reminderDetail_TimeDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="TimeDetail"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/reminderDetail_Time_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reminderDetail_DateDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminderDetail_Date_textView"
        android:background="#EEEEEE"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="DateDetail"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/reminderDetail_Time_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="---- Time ----"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/reminderDetail_DateDetail"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reminderDetail_TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>


</RelativeLayout>
