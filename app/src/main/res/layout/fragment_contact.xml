<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.ContactFragment"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/contactScreen_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/contactScreen_contactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactScreen_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Contact Us!"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/contactScreen_shareBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share the App!"
        android:background="@color/colorAccent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/contactScreen_contactBtn"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactScreen_shareBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Rate us on Play Store!"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"/>

    <Button
        android:id="@+id/contactScreen_rateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/play_badge"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"/>


</RelativeLayout>
