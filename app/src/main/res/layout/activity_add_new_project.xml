<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.AddNewProject">

        <EditText
            android:id="@+id/project_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Project Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />

        <EditText
            android:id="@+id/project_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Project Description"
            android:paddingBottom="75dp"
            android:paddingTop="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/project_name_text"/>

    <Spinner
        android:id="@+id/project_type_spinner"
        android:layout_width="match_parent"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:prompt="@string/project_prompt"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/project_type_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/project_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Project Type:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/project_desc_text"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/project_done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/project_type_spinner"/>
</RelativeLayout>
