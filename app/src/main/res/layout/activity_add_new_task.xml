<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_new_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obdurotech.projectcentral.AddNewReminder">

    <EditText
        android:id="@+id/taskDesc_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Task Description (Optional)"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_marginTop="99dp"
        android:layout_alignTop="@+id/taskName_input"
        android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/taskName_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="109dp" />

    <Spinner
        android:id="@+id/taskType_spinner"
        android:layout_width="match_parent"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:prompt="@string/type_prompt"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginBottom="64dp"
        android:layout_above="@+id/task_done_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/task_done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Task!"
        android:layout_marginBottom="86dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingStart="10dp"
        android:text="Task Type:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_above="@+id/taskType_spinner"
        android:layout_alignParentStart="true" />

</RelativeLayout>
